	.regularity(style="background-image: url({% static 'img/marketing-site/bg/bg--choosing-man.jpg' %})")
		.container
			.row
				.col-xs-12.col-lg-offset-6.col-lg-6.regularity__col
					h2.page_title.regularity__title
