extends marketing_site/layout

- load staticfiles i18n app_tags

block title
	| About | Arum Capital
block content
	.page_head(style="background-image: url({% static 'img/marketing-site/bg/bg--buildings.jpg' %})")
		.container
			.row
				.col-xs-12
					- breadcrumbs
					h1.page_head__title
						- trans "About Us"

	.bonuses
		.container
			.row
				.col-xs-12.col-md-4.bonuses__box
					.bonuses__item
						span.bonuses__number
							| 01
						.subtitle.subtitle--red
							- trans "Regulatory compliance"
						span.bonuses__text
							- trans "We are under the regulatory requirements of the CySec, corporate risk management, cybersecurity and trading safety." context "about-security"
				.col-xs-12.col-md-4.bonuses__box
					.bonuses__item
						span.bonuses__number
							| 02
						.subtitle.subtitle--red
							- trans "Cutting edge technology"
						span.bonuses__text
							- trans "Our clients have access to state-of-the-art technology in FOREX trading: direct access to a Market Depth, tick quotes, operation under FIX-protocol, investment platform with risk-management taking the side of the investor and many more."
				.col-xs-12.col-md-4.bonuses__box
					.bonuses__item
						span.bonuses__number
							| 03
						.subtitle.subtitle--red
							- trans "Integrity"
						span.bonuses__text
							- trans "Great trading conditions, no deposits/withdrawals fees and qualified client support enable the clients to enjoy the best customer service and the best trading experience. "

	.working_principles_pageblock(style="")
		.container
			.row
				.col-md-6.col-xs-12.working_presentation_pageblock__steps
					h2.page_title
						- trans "How we work"
					.working_process
						.working_process__item.working_process__item--icon-magnifier
							h3.working_process__title
								- trans "Trading transparency"
							span.working_process__text
								- trans "All client transactions are directly linked to the liquidity providers. The conditions of our license and that of our provider oblige us to link every transaction to an independent service provider."
						.working_process__item.working_process__item--icon-arrows
							h3.working_process__title
								- trans "No market manipulation"
							span.working_process__text
								- trans "We do not use the tools of betting and filtering of exchange rates. Our clients receive real market ECN/STP quotes under FIX-protocol on each specific moment."
						.working_process__item.working_process__item--icon-bid-ask
							h3.working_process__title
								- trans "Best price execution"
							span.working_process__text
								- trans "Thanks to cooperation with a leading liquidity provider our clients get the best conditions in the market â€“ prompt execution of transactions under FIX-protocol and the best price execution in the Market Depth."

		.working_presentation_pageblock__img_box
			img.working_presentation_pageblock__img(src="{% static 'img/marketing-site/pictures/pic--man.png' %}")

