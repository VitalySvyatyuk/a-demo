    {{ block.super }} â€” {% trans "Make transaction" %}

- block content
    %h1.green
        {% trans "Make transaction" %}
    .container
        %form{method: "POST"}
            - block form
                - include "includes/form.html"
                {% trans "Make" as msg %}
                %br
                - gcbutton "submit" msg "black"
